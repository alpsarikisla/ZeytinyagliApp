@model IEnumerable<ZeytinyagliWebApp.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}

<div class="form">
    <div class="form-header">
        <h3>Kategoriler</h3>
    </div>
    <div style="padding:15px 0px 10px 10px;">
        <a href="@Url.Action("Create","Category")" class="linkbutton main">Kategori Ekle</a>
        <a href="@Url.Action("AllIndex","Category")" class="linkbutton second">Tüm Kategoriler</a>
    </div>
    <div class="form-content">
        <table class="listtable" cellpadding="0" cellspacing="0">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ID)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.IsDeleted)</th>
                <th>Durum</th>
                <th>Seçenekler</th>
            </tr>
            @foreach (var item in Model)
            {
                if (item.IsDeleted)
                {
                    <tr class="silinmis">
                        <td>@Html.DisplayFor(model => item.ID)</td>
                        <td>@Html.DisplayFor(model => item.Name)</td>
                        <td>
                            @if (item.IsDeleted)
                            {
                                <span>Silinmiş Kategori</span>
                            }

                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span>Aktif Kategori</span>
                            }
                            else
                            {
                                <span>Pasif Kategori</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Category", new { id= item.ID})" class="listbtn btnduzenle">Düzenle</a>
                            <a href="@Url.Action("Delete", "Category", new { id= item.ID})" class="listbtn btnsil">Sil</a>
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>@Html.DisplayFor(model => item.ID)</td>
                        <td>@Html.DisplayFor(model => item.Name)</td>
                        <td>
                            @if (item.IsDeleted)
                            {
                                <span>Silinmiş Kategori</span>
                            }

                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span>Aktif Kategori</span>
                            }
                            else
                            {
                                <span>Pasif Kategori</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Category", new { id= item.ID})" class="listbtn btnduzenle">Düzenle</a>
                            <a href="@Url.Action("Delete", "Category", new { id= item.ID})" class="listbtn btnsil">Sil</a>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>

